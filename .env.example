# Database Configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_ADMIN_EXPIRES_IN=8h

# Email Configuration for Password Reset
EMAIL_PROVIDER=gmail
# Opciones: gmail, outlook, yahoo, custom

# Para Gmail (recomendado)
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password-de-16-caracteres

# Para SMTP personalizado (cuando EMAIL_PROVIDER=custom)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Configuración del remitente
EMAIL_FROM_NAME=Mama Mian Pizza
EMAIL_FROM_ADDRESS=noreply@mamamianpizza.com

# === INSTRUCCIONES PARA CONFIGURAR GMAIL ===
# 1. Ve a tu cuenta de Google → Seguridad
# 2. Habilita "Verificación en 2 pasos"
# 3. Ve a "Contraseñas de aplicaciones"
# 4. Genera una contraseña para "Correo"
# 5. Usa esa contraseña de 16 caracteres en EMAIL_PASS
# 6. NUNCA uses tu contraseña personal de Gmail

# === OTROS PROVEEDORES ===
# Outlook/Hotmail: EMAIL_PROVIDER=outlook
# Yahoo: EMAIL_PROVIDER=yahoo

# Twilio SMS Configuration (opcional, ya no se usa)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Server Configuration
PORT=3001
